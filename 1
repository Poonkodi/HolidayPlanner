	}

	
    function addHotelFromJson(parent_name, hotel_json) {
    	var divparent = document.getElementById(parent_name);
        var parent = document.createElement('div');
        parent.setAttribute('id', 'hotel');
        var c = addCols(parent, ['', '', '']);
		c[0].appendChild(addTextLogo(hotel_json.name, hotel_json.logo));
		
		var rs = addRows(c[1],[hotel_json.name,hotel_json.styledrating,hotel_json.rating.bold(), hotel_json.description,hotel_json.reviews,hotel_json.view]);
		c[2].appendChild(addPartnerInfo(hotel_json.partners));
		//var rt=addRows(c[2],[hotel_json.list.bold(), hotel_json.kayaklogo, hotel_json.price1,hotel_json.triplogo,hotel_json.price2]);
	
        //var r1 = addRows(c[0], [hotel_json.name,'']);
		//r1[1].appendChild(addLogo(hotel_json.logo));

        divparent.appendChild(parent);
        return parent;
    }

