    function addLogo(imgsrc) {
        var img = new Image();
        img.src = imgsrc;
        return img;
    }
	
	
function addTextLogo(text,image)
{
    var parent = document.createElement('div');
	parent.innerHTML = text;
    parent.appendChild(addLogo(image));
    return parent;
}
	
